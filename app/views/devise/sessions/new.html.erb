<div class='box'>
	<h2 class='text-center' style="margin-bottom: 30px;">LOG IN</h2>

	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Your Email Address" %>
	    <%= f.input :password, required: false, label: false, placeholder: "Your Password" %>
	  </div>

	  <div class='form-group'>
			<div class='pull-left'>
		    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
			</div>
			<div class='pull-right'>
				<%= link_to "Forgot Password", "#" %>
			</div>
		</div>

	  <div class="form-actions" style='margin-top: 70px;'>
	    <%= f.button :submit, "Log in" %>
	  </div>
	<% end %>

	<div class='create-account'  style='margin-top: 20px;'>
		<%= render "devise/shared/links" %>
	</div>
</div>

