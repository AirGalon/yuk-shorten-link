<% set_meta_tags title: "Login", description: "Let's shorten your link! Make your link easier to remember.", keyword: "Yuk, Shorten Link, Short Link, Yuk!", author: "https://yuksl.herokuapp.com", canonical: "https://yuksl.herokuapp.com", publisher: "https://yuksl.herokuapp.com", :'msvalidate.01' => "", og: { title: "Login", description: "Let's Shorten Your Link! Make Your Link Easier To Remember!", url: request.original_url, site_name: "Yuk! Shorten Link!", image: "" } %>

<div class='box'>
  <h2 class='text-center' style="margin-bottom: 30px;">LOG IN</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { novalidate: false }) do |f| %>
    <%= flash_messages %>

    <div class="form-inputs">
      <%= f.input :email, autofocus: true, label: false, placeholder: "Your Email Address", input_html: { required: true} %>
      <%= f.input :password, label: false, placeholder: "Your Password", input_html: { required: true} %>
    </div>

    <div class='form-group'>
      <div class='pull-left'>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="form-actions" style='margin-top: 70px;'>
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

  <div class='create-account'  style='margin-top: 20px;'>
    <%= render "devise/shared/links" %>
  </div>
</div>

